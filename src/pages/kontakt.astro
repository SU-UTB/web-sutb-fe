---
import { Image } from 'astro:assets';
import Layout from '../components/Layout.astro';
import Container from '../components/atoms/Container.astro';
import H1 from '../components/atoms/H1.astro';
import { Icon } from '../components/atoms/Icon.tsx';
import Breadcrumbs from '../components/organisms/Breadcrumbs.astro';
import BuresImage from '../images/kontakt/bures.jpg';
import GerzaImage from '../images/kontakt/gerza.jpg';
import HazuchovaImage from '../images/kontakt/hazuchova.jpg';
import HozzovaImage from '../images/kontakt/hozzova.jpg';
import PavelkovaImage from '../images/kontakt/pavelkova.jpg';
import SedlacikovaImage from '../images/kontakt/sedlacikova.jpg';

const metaTags = {
  title: 'Studentská unie UTB',
  description:
    'Rádi byste navázali spolupráci? Něco byste změnili? Máte dotaz? Naši hvězdní manažeři jsou vám k dispozici, neváhejte se nám ozvat!',
  image: '/meta-image-kontakt.jpg',
};

const people = [
  {
    name: 'Dominik Gerža',
    role: 'Prezident',
    email: 'gerza@sutb.cz',
    tel: '+420 605 803 354',
    image: GerzaImage,
  },
  {
    name: 'Simona Hazuchová',
    role: 'Viceprezidentka',
    email: 'hazuchova@sutb.cz',
    image: HazuchovaImage,
  },
  {
    name: 'Veronika Pavelková',
    role: 'Viceprezidentka',
    email: 'pavelkova@sutb.cz',
    image: PavelkovaImage,
  },
  {
    name: 'Kateřina Sedlačiková',
    role: 'Tajemnice',
    email: 'sedlacikova@sutb.cz',
    image: SedlacikovaImage,
  },
  {
    name: 'Michelle Hozová',
    role: 'HR',
    email: 'hozzova@sutb.cz',

    image: HozzovaImage,
  },
  {
    name: 'Jan Bureš',
    role: 'HR',
    email: 'bures@sutb.cz',
    image: BuresImage,
  },
];
---

<Layout {...metaTags}>
  <section class="pt-12 pb-16 bg-gradient-to-b from-white via-stone-100 to-stone-100 px-4 sm:px-8 md:px-8 lg:px-10">
    <Container>
      <Breadcrumbs
        items={[
          {
            title: 'Kontakt',
            href: '/kontakt',
          },
        ]}
      />
      <H1>Kontakt</H1>
      <p
        class="sm:text-lg lg:text-xl pt-6 text-stone-700 tracking-wide leading-relaxed sm:leading-relaxed lg:leading-relaxed"
      >
        Rádi byste navázali spolupráci? Něco byste změnili? Máte dotaz? <br />
        <strong class="font-medium">Naši hvězdní manažeři jsou vám k dispozici, neváhejte se nám ozvat!</strong>
      </p>
      <ul class="pt-16 md:pt-24 grid sm:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-16 max-w-sm sm:max-w-none mx-auto">
        {
          people.map((person) => (
            <li class="px-2 relative  group flex flex-col items-center sm:items-start">
              {person.image && <Image src={person.image} class="h-32 w-32 rounded-full shadow-lg" alt="" />}
              <h2 class="text-xl md:text-2xl font-bold tracking-wide text-stone-800 pt-4 md:pt-5">{person.name}</h2>
              <p class="text-primary-600 font-medium uppercase tracking-wider">{person.role}</p>
              <a
                class="mt-2 md:text-lg  font-medium py-1 text-stone-600 flex justify-start items-center hover:text-primary-600 transition duration-300"
                href={`mailto:${person.email}`}
              >
                <Icon name="mail" className="w-5 h-5 mr-2.5" />
                <span>{person.email}</span>
              </a>
              {person.tel && (
                <a
                  class="md:text-lg font-medium py-1 text-stone-600 flex justify-start items-center hover:text-primary-600 transition duration-300"
                  href={`tel:${person.tel}`}
                >
                  <Icon name="tel" className="w-5 h-5 mr-2.5" />
                  <span>{person.tel}</span>
                </a>
              )}
            </li>
          ))
        }
      </ul>
      <svg
        class="h-64 w-64 sm:h-96 sm:w-96 absolute right-0 top-0 translate-y-[25%] opacity-[0.075]"
        viewBox="0 0 33 30"
      >
        <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
          <g transform="translate(-32.000000, -26.000000)" fill="#EE7711" fill-rule="nonzero">
            <g id="logo_su" transform="translate(32.000000, 26.000000)">
              <path
                d="M31.6614303,10.9753671 L31.6461172,10.9505143 C28.8773266,6.2163807 22.7691518,4.59562752 17.9868785,7.32614936 L17.9618208,7.33995646 L9.04127437,12.473438 C8.0265194,13.1068432 7.69938129,14.4232963 8.30113749,15.4518604 C8.90289369,16.4804245 10.2175909,16.851977 11.2755873,16.2924831 L20.1849969,11.1659051 L20.2086626,11.152098 C22.8620499,9.63553612 26.2521881,10.5287253 27.7969738,13.1513668 C27.8001368,13.1585474 27.8038604,13.165472 27.8081106,13.1720774 C29.337647,15.806544 28.432962,19.1716762 25.7840041,20.7010916 L16.8745944,25.8345731 C16.1497693,26.2117051 15.691893,26.9527486 15.6821275,27.7645048 C15.6723619,28.576261 16.1122806,29.3279293 16.8278268,29.7221069 C17.5433729,30.1162845 18.4192485,30.0894565 19.1089073,29.6522375 L28.018317,24.518756 C32.7856053,21.7694586 34.4143331,15.7146116 31.6614303,10.9753671 Z"
              ></path>
              <path
                d="M23.9964494,17.5130924 C24.9832918,16.8676761 25.2916668,15.570913 24.6996489,14.5560335 C24.1076309,13.541154 22.8205805,13.1602018 21.7647383,13.6873335 L12.8420783,18.817863 L12.8169715,18.8316994 C10.1587035,20.3505405 6.76297093,19.4555673 5.21520557,16.8281917 C5.21268278,16.8207029 5.20891087,16.8136873 5.20404701,16.8074371 C3.67647267,14.1703254 4.58030354,10.8045773 7.22793003,9.27076114 L7.23629894,9.27076114 L16.1631434,4.13054613 C17.2296756,3.51692392 17.5928119,2.16182059 16.9742308,1.10383812 C16.3556498,0.0458556532 14.9895956,-0.31436954 13.9230634,0.299252629 L4.99621892,5.44361855 C0.216743751,8.19689743 -1.41789664,14.2660588 1.34039716,19.0171069 C1.34452252,19.0256871 1.34918088,19.0340049 1.35434535,19.0420124 C4.13157149,23.7822715 10.2480371,25.4054893 15.0403137,22.674062 L15.0640257,22.658842 L23.9964494,17.5130924 Z"
              ></path>
            </g>
          </g>
        </g>
      </svg>
    </Container>
  </section>
  <section class="py-16 bg-stone-100">
    <Container>
      <h2 class="text-2xl sm:text-3xl md:text-4xl pt-12 font-bold tracking-wide text-center">Adresa</h2>
      <p class="text-center text-sm sm:text-base md:text-lg text-stone-700 leading-relaxed tracking-wider pt-4">
        Studentská unie UTB, z.s. <br />
         Růmy 4046, budova U3 UTB <br />
         760 01 Zlín <br />
         IČO: 26996286
      </p>
    </Container>
  </section>
</Layout>
